	@Test(priority = 1)
	public void clan() {
        open(baseUrl + "/clan/clanList.ct");
        $(".menu-title").waitUntil(text("전체 메뉴"), 3000);
        System.out.println(TestBrowser + " clan List : Pass");
        $(".ac_btn_text", 1).click();
        $(".menu-title").waitUntil(text("전체 메뉴"), 3000);
        $(".ac_btn_text", 0).click();
        $(".tmp_title").waitUntil(text("전체 메뉴"), 3000);
        
    }
